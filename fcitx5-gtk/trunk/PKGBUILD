pkgname=fcitx5-gtk
pkgver=0.0.0.20200820
_commit=d26dd52fba08ba1822ef2afffea5eaad480afd7f
pkgrel=1
pkgdesc="Fcitx5 gtk im module and glib based dbus client library"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-gtk"
license=('GPL')
groups=('fcitx5-im')
depends=('fcitx5')
makedepends=('extra-cmake-modules' 'gobject-introspection' 'gtk2' 'gtk3' 'ninja')
source=("https://github.com/fcitx/fcitx5-gtk/archive/$_commit/fcitx5-gtk-$_commit.tar.gz")
sha512sums=('1705908aea12fc96f27018b65ab2a0de72b3d53fb21002e5541dffe110944be87f95085cdcc34b23bd7cf35a66d1e3167a4c3ba8da5a0f2cbd99b80eed7c1e04')

build(){
  cd $pkgname-$_commit

  cmake -GNinja -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  ninja
}

package() {
  cd $pkgname-$_commit
  DESTDIR="$pkgdir" ninja install
}
