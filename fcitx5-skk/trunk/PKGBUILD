pkgname=fcitx5-skk
pkgver=0.0.0.20200816
_commit=cc9261407b496a5708dca642deec5bcafe1cf58c
pkgrel=1
pkgdesc="libskk wrapper for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-skk"
license=('GPL')
depends=('fcitx5-qt' 'libskk' 'skk-jisyo')
makedepends=('extra-cmake-modules' 'ninja')
source=("https://github.com/fcitx/fcitx5-skk/archive/$_commit/fcitx5-skk-$_commit.tar.gz")
sha512sums=('de72c9cd9f6dcbaf3093f50b178cdb3e4a9b0b73f73a3eb70f626dcf06975589818e42bb54ce13471c0eb717b33a30a5d937733bd7c885bf87665c4bfd03b6ba')

build(){
  cd $pkgname-$_commit

  cmake -GNinja -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  ninja
}

package() {
  cd $pkgname-$_commit
  DESTDIR="$pkgdir" ninja install
}
